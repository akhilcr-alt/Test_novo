        <section id="activation" class="section-container scroll-mt-20">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold tracking-tight sm:text-4xl headline">Potential Activation Examples</h2>
                <p class="mt-4 text-lg leading-8">A dynamic list of curated links and resources.</p>
            </div>
            <div class="card p-8 max-w-4xl mx-auto">
                <div class="space-y-4" id="link-list">
                    <!-- Links will be dynamically added here -->
                </div>
                <div class="mt-6 pt-6 border-t" style="border-color: var(--green-semantic-stroke);">
                    <h3 class="text-lg font-semibold mb-4 headline">Add a New Link</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <input type="text" id="link-title-input" placeholder="Link Title" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2" style="border-color: var(--green-semantic-stroke); --tw-ring-color: var(--green-semantic-stroke-hover);">
                        <input type="url" id="link-url-input" placeholder="https://example.com" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2" style="border-color: var(--green-semantic-stroke); --tw-ring-color: var(--green-semantic-stroke-hover);">
                    </div>
                    <button id="add-link-btn" class="mt-4 w-full md:w-auto primary-btn px-6 py-2 rounded-md font-semibold transition-colors">Add Link</button>
                </div>
